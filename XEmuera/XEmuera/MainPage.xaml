<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:Views="clr-namespace:XEmuera.Views"
	x:Class="XEmuera.MainPage"
	FlyoutLayoutBehavior="Popover">

	<FlyoutPage.Flyout>
		<Views:MainMenuPage
			x:Name="MainMenu"
			Title="MainMenuPage" />
	</FlyoutPage.Flyout>

	<FlyoutPage.Detail>
		<NavigationPage>
			<x:Arguments>
				<Views:GameItemPage />
			</x:Arguments>
		</NavigationPage>
	</FlyoutPage.Detail>

</FlyoutPage>
